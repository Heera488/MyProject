@{
    ViewData["Title"] = "Home Page";
}
<style>
    .button-width {
        width: 100px; /* Replace with your desired width */
    }
</style>

<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-5 col-8 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">Billing</li>
            </ol>
        </div>

    </div>

    <div id="exTab1" class=".container">
        
        <form id="frmBillEntry" style="display:none;">
            <div class="my_card">
                <div class="form-body p-20">
                    <div class="row p-t-20">


                        <div class="col-md-4">
                            <div class="form-group">
                                <label>ID<span style="color:red">*</span></label>
                                <input type="text" class="form-control ID" id="ID" name="ID" placeholder="ID"  required maxlength="10"  autocomplete="off" />

                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Item_Code<span style="color:red">*</span></label>
                                <input type="text" class="form-control Item_Code" id="Item_Code" name="Item_Code" required placeholder="Item_Code" maxlength="10" autocomplete="off">

                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Item_Name<span style="color:red">*</span></label>
                                <input type="text" class="form-control Item_Name" id="Item_Name" name="Item_Name" required placeholder="Item_Name" maxlength="100" autocomplete="off">

                            </div>
                        </div>
